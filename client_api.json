{
  "openapi": "3.0.2",
  "info": {
    "title": "CY2 Connect",
    "version": "1.0.0",
    "description": "Client API to the CY2 Connect",
    "contact": {
      "url": "https://cy2.nl"
    }
  },
  "servers": [
    {
      "url": "https://dev.cy2hub.app/v1",
      "description": "development environment"
    },
    {
      "url": "https://test.cy2hub.app/v1",
